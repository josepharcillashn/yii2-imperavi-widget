{
    "name": "josepharcillashn/yii2-imperavi-widget",
    "description": "The imperavi redactor widget for Yii 2 framework.",
    "type": "yii2-extension",
    "keywords": [
        "yii",
        "extension",
        "imperavi",
        "widget",
        "yii2",
        "yii 2",
        "redactor",
        "wysiwyg"
    ],
    "homepage": "https://github.com/josepharcillashn/yii2-imperavi-widget",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Joseph Arcillas",
            "email": "joseph.arcillas@hostednetwork.com.au",
            "homepage": "https://github.com/josepharcillashn",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/josepharcillashn/yii2-imperavi-widget/issues?state=open",
        "source": "https://github.com/josepharcillashn/yii2-imperavi-widget"
    },
    "minimum-stability": "stable",
    "require": {
        "yiisoft/yii2": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "4.*",
        "scrutinizer/ocular": "~1.1",
        "mikey179/vfsStream": "~1"
