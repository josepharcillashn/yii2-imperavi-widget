    "autoload": {
        "psr-4": {
            "josepharcillashn\\imperavi\\": "src",
            "josepharcillashn\\imperavi\\tests\\": "tests"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
